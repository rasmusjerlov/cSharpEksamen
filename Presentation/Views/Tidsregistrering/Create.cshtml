@model cSharpEksamen.Presentation.Models.TidsregistreringViewModel

@{
    ViewBag.Title = "Create Tidsregistrering";
}

<h2>Create Tidsregistrering</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StartTid" class="control-label"></label>
        <input type="datetime-local" asp-for="StartTid" class="form-control" />
        <span asp-validation-for="StartTid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SlutTid" class="control-label"></label>
        <input type="datetime-local" asp-for="SlutTid" class="form-control" />
        <span asp-validation-for="SlutTid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MedarbejderInitialer" class="control-label"></label>
        <select asp-for="MedarbejderInitialer" class="form-control" asp-items="@(new SelectList(ViewBag.Medarbejdere, "Initialer", "Navn"))"></select>
        <span asp-validation-for="MedarbejderInitialer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SagId" class="control-label"></label>
        <select asp-for="SagId" class="form-control" asp-items="@(new SelectList(ViewBag.Sager, "SagId", "Overskrift"))"></select>
        <span asp-validation-for="SagId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Afdeling" class="control-label"></label>
        <select asp-for="Afdeling" class="form-control">
            <option value="1">IT</option>
            <option value="2">HR</option>
            <option value="3">Salg</option>
        </select>
        <span asp-validation-for="Afdeling" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}